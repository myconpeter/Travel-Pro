<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script
			src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"
			integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />



</head>
<body>

  <div id="invoice" style="display: flex; justify-content: center;"> 
    <div style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
      <h1 class="mb-4 text-dark" style="color: #13357b;">Valid Plane Ticket ID</h1>
     
  
         
        
      <a style="margin-top: 20px; background-color: #13357b; padding: 10px 20px; color: white; text-decoration: none;" href="/">Go Back To Home</a>
  
  </div>
  </div>

  
    <div style="display: flex; justify-content: center; align-items: center; height: 75vh; margin-top: 100px;">
        <div style="background-color: white; height: 500px; width: 65vw;">
            <div style="display: flex; justify-content: space-between; align-items: center; padding: 0; height: 15%; width: 65vw; background-color: #13357b;" href="" class="" >
                <h3 style="color: white; margin-left: 10px; font-size: 30px;" class="m-0"><i class="fa fa-map-marker-alt me-3 " style="margin-right: 10px;"></i>Travel-Pro</h3>
                <h5  style="color: white; margin-right: 10px; font-size: 30px">BOARDING PASS</h5>
            </div>

            <div style="display: flex; align-items: center;">
                <!-- right details -->
                <div style=" width: 65%; ">
                    <div style="margin-left: 10px;">
                        <div style="margin-top: 10px;">
                            <p style="color: gray; font-size: 13px;">PASSENGER</p>
                            <h3><%= plane.name %></h3>
                        </div>
    
                        <div style="display: flex; justify-content: space-between;">
                            <div>
                                <p style="color: gray; font-size: 13px;">FROM / TO</p>
                                <h3><%= plane.from %> &nbsp; <span><i class="fas fa-plane"></i></span><span> &nbsp;<%= plane.to %></span></h3>

                            </div>
                            <div>
                               
                                <p style="color: gray; font-size: 13px;">DATE / TIME</p>
                                <h3><%= plane.departure %> <span><%= plane.time %></span></h3>
                            </div>
                        </div>
    
                        <div style="display: flex; justify-content: space-between;">
                            <div>
                                <p style="color: gray; font-size: 13px;">FLIGHT</p>
                                <h3><%= plane.flightNo %></h3>
                            </div>
                            <div>
                                <p style="color: gray; font-size: 13px;">GATE</p>
                                <h3><%= plane.gate %></h3>
                            </div>
                            <div>
                                <p style="color: gray; font-size: 13px;">SEAT</p>
                                <h3><%= plane.seat %></h3>
                            </div>
                        </div>

                        <div style="margin-top: 10px;">
                          <p style="color: gray; font-size: 13px;">CLASS</p>
                          <h3><%= plane.planeClass %></h3>
                      </div>
                    </div>

                    
                   

                </div>
               
                <div style=" display: inline-block; position: relative; transform: rotate(270deg);">
                    <img style="width: 200px; height: 100px;" src="img/barcode.png" alt="">
                    <p style="text-align: center; position: absolute; bottom: -20px; left: 50%; transform: translateX(-50%);"><span><%= plane.gate %></span><span><%= plane.seat %></span></p>
                  </div>
                
               


                <!-- left details -->
                <div style="background-color: lightgray; width: 35%; height: 500px;">
                    <div style=" display: flex; margin-left: 50px; align-items: center;">
                        <div>
                            <div>
                                <p style="color: gray; font-size: 13px;">PASSENGER</p>
                                <h3><%= plane.name %></h3>
                            </div>
        
                            <div style="display: flex;  justify-content: space-around;">
                               <div style="margin-right: 10px;">
                                <p style="color: gray; font-size: 13px;">FLIGHT</p>
                                <h3><%= plane.flightNo %></h3>
                               </div>
        
                               <div style="margin-right: 10px;">
                                <p style="color: gray; font-size: 13px;">GATE</p>
                                <h3><%= plane.gate %></h3>
                               </div>
        
                               <div>
                                <p style="color: gray; font-size: 13px;">SEAT</p>
                                <h3> <%= plane.seat %></h3>
                               </div>
                            </div>
        
                            <div>
                                <p style="color: gray; font-size: 13px;">DATE / TIME</p>
                                <h3><span><%= plane.departure %></span> <%= plane.time %></h3>
                            </div>
        
                            <div>
                                <p style="color: gray; font-size: 13px;">FROM / TO</p>
                                <h3><%= plane.from %> &nbsp; <span><i class="fas fa-plane"></i></span><span> &nbsp;<%= plane.to %></span></h3>
                            </div>
        
                        </div>
    
                        <div style="margin-top: 300px; display: inline-block; position: relative; transform: rotate(270deg);">
                            <img style="width: 100px; height: 100px;" src="img/barcode.png" alt="">
                            <p style="text-align: center; position: absolute; bottom: -20px; left: 50%; transform: translateX(-50%);"><span><%= plane.gate %></span><span><%= plane.seat %></span></p>
                        </div>
                        
                    
                    </div>

                    

                </div>


            </div>
        </div>
      </div>

      <div style="margin-top: 200px; ">
        <div style="display: flex; justify-content: center; align-items: center; height: 70vh;">
            <div style="background-color: #13357b ; height: 70vh;  width: 70vw; display: flex; justify-content: center; align-items: center;">
                <h1 style="color: white; margin-left: 10px; font-size: 30px; margin-bottom: 20px;" class="m-0"><i class="fa fa-map-marker-alt me-3 " style="margin-right: 10px;"></i>Travel-Pro</h1>
                
            </div>

        </div>
      </div>

      <!-- <button id="download-button">Download PDF</button> -->

      <script>
        const button = document.getElementById('download-button');

        function generatePDF() {
            // Choose the element that your content will be rendered to.
            const element = document.getElementById('invoice');
            // Choose the element and save the PDF for your user.
            html2pdf().from(element).save();
        }

        button.addEventListener('click', generatePDF);
    </script>

</body>
</html>